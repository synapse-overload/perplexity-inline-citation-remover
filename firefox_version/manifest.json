{
  "manifest_version": 3,
  "name": "Perplexity Citation Remover",
  "version": "1.0.0",
  "description": "Removes inline citations from Perplexity.ai responses",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://perplexity.ai/*",
    "*://*.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Citation Remover"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://perplexity.ai/*",
        "*://*.perplexity.ai/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}